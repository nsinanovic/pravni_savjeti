<%= form_for(@comment, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h4>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :content, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :problem, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :problem, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :additional, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :additional, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :posted, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :posted, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :likes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :likes, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :dislikes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :dislikes, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
